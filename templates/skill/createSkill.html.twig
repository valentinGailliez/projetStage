{% extends 'base.html.twig' %}

{% block title %}
	Création skill et subskill
{% endblock %}
{% block body %}

	<div class="container">
		<div class="row">
			{{ form_start(form)
            }}


			Nom de la compétence :

			{{ form_widget(form.name)}}
			{{ form_errors(form.name) }}
			Numéro de Compétence :
			{{ form_widget(form.skillNumber)}}
			{{ form_errors(form.skillNumber) }}
			Section :
			{{form_widget(form.domain)}}


			<button type="submit" id="btnSubmit" class="btn btn-success">
				Créer compétence</button>
			{{ form_end(form)}}
		</div>
		<div class="row">
			<div class="col"><br>
				<hr>
				<a class="btn btn-secondary" href="{{path('accueilSkill')}}">
					Revenir à la liste de compétences
				</a>
			</div>
		</div>
	</div>


{% endblock %}