{% extends 'base.html.twig' %}

{% block title %}
	Création skill et subskill
{% endblock %}
{% block body %}

	<div class="container">
		<div class="row">
			{{ form_start(form, {
                'attr': {
                    'novalidate': 'novalidate',
                    'class': 'col-lg-5' 
                    }
                })
            }}


			Nom de la compétence :
			{{ form_widget(form.name)}}
			{{ form_errors(form.name) }}
			Numéro de Compétence :
			{{ form_widget(form.skillNumber)}}
			{{ form_errors(form.skillNumber) }}
			Section :
			{{ form_widget(form.section)}}
			{{ form_errors(form.section) }}

			Commentaire :
			{{ form_widget(form.comments)}}
			{{ form_errors(form.comments) }}

			<button type="submit" class="btn btn-success">
				Créer compétence</button>
			{{ form_end(form)}}
		</div>
	</div>


	{% if new == false %}
		<div class="row">
			<div class="col"><br>
				<hr>
				<a class="btnbtn-secondary" href="{{path('accueilSkill')}}">
					Revenir à la liste de compétences
				</a>
			</div>
		</div>
	{% endif %}
{% endblock %}