{% extends 'base.html.twig' %}

{% block title %}Liste utilisateur
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="btn-toolbar mb-2 mb-md-0">
		<h1>Liste de étudiants</h1>
	</div>
	<table class="table table-striped">
		<thead>
			<td>Nom de l'étudiant</td>
			<td>Prénom de l'étudiant</td>
			<td>Type d'utilisateur</td>
		</thead>

		<tbody>
			{% for student in students%}
				<tr>
					<td>{{student.lastname}}</td>
					<td>{{student.firstname}}</td>
					<td>{{student.type}}</td>
				</tr>
			</tbody>
		{% endfor %}
	</table>
{% endblock %}