{% extends 'base.html.twig' %}

{% block title %}
	Gestion skill et subskill
{% endblock %}
{% block body %}
	<h1>Sous-Compétence</h1>
	<div class="container">
		<div class="row">
			{{ form_start(form, {
                'attr': {
                    'novalidate': 'novalidate',
                    'class': 'col-lg-5' 
                    }
                })
            }}


			Nom de la compétence :
			{{ form_widget(form.name)}}
			Numéro de Compétence :
			{{ form_widget(form.number)}}

			<button type="submit" class="btn btn-primary">
				Créer compétence</button>
			{{ form_end(form)}}

			<div class="row">
				<div class="col">
					<br>
					<hr>
					{% if new == false %}

						{% else %}
							<a class="btn btn-secondary" href="{{path('accueilSkill')}}">
								Revenir à la liste de compétences</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}