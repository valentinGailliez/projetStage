{% extends 'base.html.twig' %}

{% block title %}Gestion skill et subskill
{% endblock %}
{% block body %}
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<h1>Sous-Compétence</h1>
	<div class="container">
		<div class="row">
			{{ form_start(form, {
                'attr': {
                    'novalidate': 'novalidate',
                    'class': 'col-lg-5' 
                    }
                })
            }}


			Nom de la compétence :
			{{ form_widget(form.name)}}
			Numéro de Compétence :
			{{ form_widget(form.number)}}

			<button type="submit" class="btn btn-primary">Créer compétence</button>
			{{ form_end(form)}}
			{% if new==false %}


				<form action="{{path('accueilSubSkill',{'id' : skill.id})}}">
					<button type="submit" class="btn btn-secondary">Revenir à la liste de sous-compétence</button>
				</form>
			{% endif %}
		</div>
	</div>
{% endblock %}
