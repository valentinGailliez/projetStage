{% extends 'base.html.twig' %}

{% block title %}Liste étudiants
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="btn-toolbar mb-2 mb-md-0">
		<h1>Liste des étudiants</div>
	</div>
	<table class="table table-striped">
		<thead>
			<td>Nom de l'étudiant</td>
			<td>Prénom de l'étudiant</td>
			<td>Consulter l'évaluation</td>
		</thead>

		<tbody>
			{% for evaluation in evaluations%}
				<tr>
					<td>{{evaluation.cotation[0].user.lastname}}</td>
					<td>{{evaluation.cotation[0].user.firstname}}</td>
					<td>
						<a class="btn btn-success" href="{{path('viewStudentEvaluation',{'id':evaluation.id})}}">Consulter l'évaluation</a>
					</td>
					
				</tr>
			</tbody>
		{% endfor %}
	</table>
{% endblock %}